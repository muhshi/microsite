{
  frankenphp
  # yang benar:
  order cgi-php before file_server
}

# Domain disesuaikan atau tetap menggunakan puslah jika memang domainnya itu
:80 {
    root * /app/public
    encode zstd br gzip

    # Pastikan /livewire/* tidak ditangani sebagai static file
    @livewire path /livewire/*
    handle @livewire {
        rewrite * /index.php?{query}
    }

    php_server
    file_server
}
